{
  "src_folders": [
    "test/e2e/"
  ],
  "output_folder": "test/e2e/reports",
  "custom_commands_path": "",
  "custom_assertions_path": "",
  "globals_path": "",
  "selenium": {
    "start_process": true,
    "server_path": "./node_modules/selenium-standalone/.selenium/selenium-server/2.48.2-server.jar",
    "log_path": false, 
    "host": "0.0.0.0",
    "port": 4444,
    "cli_args": {
      "webdriver.chrome.driver": "./node_modules/selenium-standalone/.selenium/chromedriver/2.20-x64-chromedriver",
      "webdriver.ie.driver": ""
    }
  },
  "test_settings": {
    "default": {
      "launch_url": "http://localhost",
      "selenium_port": 4444,
      "selenium_host": "0.0.0.0",
      "silent": true,
      "screenshots": {
        "enabled": true,
        "path": "test/e2e/reports"
      }
    },
    "firefox": {
      "desiredCapabilities": {
        "browserName": "firefox",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    },
    "chrome": {
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    }
  }
